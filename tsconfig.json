{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "strict": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "." ,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "exclude": [
    "node_modules"
  ]
}